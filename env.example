# Copy this file to .env.local and fill in your values

# Vercel Blob Storage
# Get these from: Vercel Dashboard → Storage → Your Blob Store
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here
NEXT_PUBLIC_BLOB_STORE_ID=your_blob_store_id_here

# Admin Password (hashed with bcrypt)
# Generate with: node scripts/generate-password.js your_password
ADMIN_PASSWORD_HASH=your_hashed_password_here

# Base URL (for production, set to your domain)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
